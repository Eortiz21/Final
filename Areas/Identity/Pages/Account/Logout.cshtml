@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<header>
    <h1>@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form method="post" asp-area="Identity" asp-page="/Account/Logout" onsubmit="return confirmLogout()">
            <button type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
        </form>
    }
    else
    {
        <p>Has cerrado sesión correctamente.</p>
    }
</header>

<script>
    function confirmLogout() {
        return confirm("¿Está seguro de que desea cerrar sesión?");
    }
</script>
