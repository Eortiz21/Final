@model IEnumerable<Primera.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<input type="text" id="filterInput" placeholder="Filtrar por nombre, apellido, documento o teléfono..." class="filter-bar" />

<table id="clientesTable" class="table">
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>DPI/PASAPORTE</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td data-label="Nombres">@Html.DisplayFor(modelItem => item.Nombres)</td>
                <td data-label="Apellidos">@Html.DisplayFor(modelItem => item.Apellidos)</td>
                <td data-label="NumeroDocumentacion">@Html.DisplayFor(modelItem => item.NumeroDocumentacion)</td>
                <td data-label="Teléfono">@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td data-label="Dirección">@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td data-label="Estado">@Html.DisplayFor(modelItem => item.Estado)</td>
                <td data-label="Acciones">
                    <a asp-action="Edit" asp-route-id="@item.Id_Cliente" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id_Cliente" class="btn btn-sm btn-success me-1">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id_Cliente" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    const filterInput = document.getElementById("filterInput");
    const rows = document.querySelectorAll("#clientesTable tbody tr");

    filterInput.addEventListener("input", function () {
        const filter = this.value.toLowerCase();

        rows.forEach(row => {
            const nombres = row.cells[0].textContent.toLowerCase();
            const apellidos = row.cells[1].textContent.toLowerCase();
            const documento = row.cells[2].textContent.toLowerCase();
            const telefono = row.cells[3].textContent.toLowerCase();

            if (
                nombres.includes(filter) ||
                apellidos.includes(filter) ||
                documento.includes(filter) ||
                telefono.includes(filter)
            ) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>
