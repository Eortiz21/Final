@model Primera.Models.Vehiculo

@{
    ViewData["Title"] = "Editar Vehículo";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Editar Vehículo</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Número de Placa (prefijo fijo, no editable) -->
                <div class="mb-3">
                    <label class="form-label">Número de Placa</label>
                    <input asp-for="NoPlaca" class="form-control" readonly />
                    <span asp-validation-for="NoPlaca" class="text-danger"></span>
                </div>

                <!-- Marca -->
                <div class="mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <!-- Color -->
                <div class="mb-3">
                    <label asp-for="Color" class="form-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <!-- Cliente -->
                <div class="mb-3">
                    <label asp-for="Id_Cliente" class="form-label"></label>
                    <select asp-for="Id_Cliente" class="form-select" asp-items="ViewBag.Id_Cliente"></select>
                    <span asp-validation-for="Id_Cliente" class="text-danger"></span>
                </div>

                <!-- Tipo -->
                <div class="mb-3">
                    <label asp-for="Id_Tipo" class="form-label"></label>
                    <select asp-for="Id_Tipo" class="form-select" asp-items="ViewBag.Id_Tipo"></select>
                    <span asp-validation-for="Id_Tipo" class="text-danger"></span>
                </div>
                <!-- Estado -->
                <div class="mb-3">

                    <select asp-for="Estado" class="form-select">
                        <option value="">-- Seleccione un método --</option>
                        <option value="En parqueo ">En parqueo </option>
                        <option value="Fuera de parqueo">Fuera de parqueo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>


                <!-- Botones -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
