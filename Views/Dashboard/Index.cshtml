@{
    ViewData["Title"] = "Dashboard";
}
<div class="row">
    <div class="col-md-12 text-end mb-3">
        <form id="formExportar" method="post">
            <input type="hidden" name="graficoVehiculos" id="graficoVehiculos" />
            <input type="hidden" name="graficoOcupacion" id="graficoOcupacion" />
            <input type="hidden" name="graficoClientes" id="graficoClientes" />

            <button type="submit" formaction="@Url.Action("ExportarExcel", "Reportes")" class="btn btn-success btn-sm me-2">
                <i class="fas fa-file-excel"></i> Exportar Excel
            </button>
            <button type="submit" formaction="@Url.Action("ExportarPdf", "Reportes")" class="btn btn-danger btn-sm">
                <i class="fas fa-file-pdf"></i> Exportar PDF
            </button>
        </form>
    </div>
</div>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Panel de Control</h2>

    <!-- Tarjetas -->
    <div class="row g-4">
        <!-- Vehículos -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-car fs-2 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Vehículos</h5>
                            <small>Total registrados</small>
                        </div>
                    </div>
                    <h3>@ViewData["TotalVehiculos"]</h3>
                    <a asp-controller="Vehiculoes" asp-action="Index" class="btn btn-light btn-sm mt-3 align-self-start">Ver detalles</a>
                </div>
            </div>
        </div>

        <!-- Clientes -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white bg-success h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-people fs-2 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Clientes</h5>
                            <small>Activos</small>
                        </div>
                    </div>
                    <h3>@ViewData["TotalClientes"]</h3>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-light btn-sm mt-3 align-self-start">Ver detalles</a>
                </div>
            </div>
        </div>

        <!-- Parqueos -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white bg-warning h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-parking fs-2 me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Parqueos</h5>
                            <small>Disponibles</small>
                        </div>
                    </div>
                    <h3>@ViewData["TotalEspacios"]</h3>
                    <a asp-controller="Parqueos" asp-action="Index" class="btn btn-light btn-sm mt-3 align-self-start">Administrar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Últimos Vehículos -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-clock-history me-2"></i>Últimos Vehículos Registrados
                </div>
                <div class="card-body">
                    @if ((ViewData["UltimosVehiculos"] as IEnumerable<Primera.Models.Vehiculo>)?.Any() ?? false)
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Marca</th>
                                    <th>Placa</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in (IEnumerable<Primera.Models.Vehiculo>)ViewData["UltimosVehiculos"])
                                {
                                    <tr>
                                        <td>@v.Marca</td>
                                        <td>@v.NoPlaca</td>
                                        <td>@v.TipoVehiculo?.Descripcion</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No hay vehículos registrados aún.</p>
                    }
                    <a asp-controller="Vehiculoes" asp-action="Index" class="btn btn-sm btn-primary mt-3">Ver todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de gráficas -->
<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">Vehículos por Tipo</div>
            <div class="card-body">
                <canvas id="vehiculosChart" height="150"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-danger text-white">Ocupación del Parqueo</div>
            <div class="card-body">
                <canvas id="ocupacionChart" height="150"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">Clientes Diarios</div>
            <div class="card-body">
                <canvas id="clientesChart" height="150"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // === Vehículos por Tipo ===
        var ctxVehiculos = document.getElementById("vehiculosChart").getContext("2d");
        new Chart(ctxVehiculos, {
            type: "bar",
            data: {
                labels: @Html.Raw(Json.Serialize(ViewData["VehiculosPorTipoLabels"])),
                datasets: [{
                    label: "Cantidad de Vehículos",
                    data: @Html.Raw(Json.Serialize(ViewData["VehiculosPorTipoData"])),
                    backgroundColor: ["#007bff", "#28a745", "#ffc107", "#dc3545", "#6f42c1"]
                }]
            },
            options: { responsive: true, plugins: { legend: { display: false } } }
        });

        // === Ocupación del Parqueo ===
        var ctxOcupacion = document.getElementById("ocupacionChart").getContext("2d");
        new Chart(ctxOcupacion, {
            type: "doughnut",
            data: {
                labels: ["Ocupados", "Disponibles"],
                datasets: [{
                    data: [@ViewData["Ocupados"], @ViewData["Disponibles"]],
                    backgroundColor: ["#dc3545", "#28a745"]
                }]
            }
        });

        // === Clientes Diarios ===
        var ctxClientes = document.getElementById("clientesChart").getContext("2d");
        new Chart(ctxClientes, {
            type: "bar",
            data: {
                labels: @Html.Raw(Json.Serialize(ViewData["DiasClientes"])),
                datasets: [{
                    label: "Clientes",
                    data: @Html.Raw(Json.Serialize(ViewData["ClientesDiarios"])),
                    backgroundColor: "#28a745"
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });

        // === Captura de gráficos antes de exportar ===
        function capturarGraficos() {
            document.getElementById("graficoVehiculos").value =
                document.getElementById("vehiculosChart").toDataURL("image/png");

            document.getElementById("graficoOcupacion").value =
                document.getElementById("ocupacionChart").toDataURL("image/png");

            document.getElementById("graficoClientes").value =
                document.getElementById("clientesChart").toDataURL("image/png");
        }

        document.getElementById("formExportar").addEventListener("submit", function () {
            capturarGraficos();
        });
    </script>

    <script>
        document.getElementById("formExportar").addEventListener("submit", function () {
            document.getElementById("graficoVehiculos").value = document.getElementById("vehiculosChart").toDataURL("image/png");
            document.getElementById("graficoOcupacion").value = document.getElementById("ocupacionChart").toDataURL("image/png");
            document.getElementById("graficoClientes").value = document.getElementById("clientesChart").toDataURL("image/png");
        });
    </script>

}
