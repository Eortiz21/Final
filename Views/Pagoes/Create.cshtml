@model Primera.Models.Pago

@{
    ViewData["Title"] = "Registrar Pago";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0">Registrar Pago</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Id_Ticket" class="form-label fw-semibold"></label>
                    <input asp-for="Id_Ticket" class="form-control" />
                    <span asp-validation-for="Id_Ticket" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MontoPago" class="form-label fw-semibold"></label>
                    <input asp-for="MontoPago" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MontoPago" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaPago" class="form-label fw-semibold"></label>
                    <input asp-for="FechaPago" class="form-control" type="date" />
                    <span asp-validation-for="FechaPago" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MetodoPago" class="form-label fw-semibold"></label>
                    <input asp-for="MetodoPago" class="form-control" />
                    <span asp-validation-for="MetodoPago" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EstadoPago" class="form-label fw-semibold"></label>
                    <input asp-for="EstadoPago" class="form-control" />
                    <span asp-validation-for="EstadoPago" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Volver a la lista</a>
                    <button type="submit" class="btn btn-success">Guardar Pago</button>
                </div>
            </form>
        </div>
    </div>
</div>
