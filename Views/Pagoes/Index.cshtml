@model IEnumerable<Primera.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1>Pagos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Pago
    </a>
</p>

<!-- Barra de filtro -->
<input type="text" id="filterInput" placeholder="Filtrar por ticket, método o estado..." class="form-control mb-3" />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Ticket: @item.Ticket.NoPlaca</h5>
                    <p class="card-text"><strong>Monto:</strong> @item.MontoPago.ToString("C")</p>
                    <p class="card-text"><strong>Fecha:</strong> @item.FechaPago.ToString("yyyy-MM-dd")</p>
                    <p class="card-text"><strong>Método:</strong> @item.MetodoPago</p>
                    <p class="card-text"><strong>Estado:</strong> @item.EstadoPago</p>
                </div>
                <div class="card-footer d-flex justify-content-between flex-wrap">
                    <a asp-action="Edit" asp-route-id="@item.Id_Pago" class="btn btn-sm btn-primary mb-1">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id_Pago" class="btn btn-sm btn-success mb-1">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id_Pago" class="btn btn-sm btn-danger mb-1">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                    <!-- Botón de reimprimir recibo -->
                    <a href="javascript:void(0);" onclick="reimprimir(@item.Id_Pago)" class="btn btn-sm btn-info mb-1">
                        <i class="bi bi-printer"></i> Reimprimir
                    </a>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="col-12 text-center">
            <p>No hay pagos registrados.</p>
        </div>
    }
</div>

<!-- Modal para reimprimir recibo -->
<div class="modal fade" id="reciboModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Recibo de Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Contenido cargado vía AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <!-- Botón de imprimir dentro del modal -->
                <button type="button" class="btn btn-primary" onclick="imprimirRecibo()">
                    <i class="bi bi-printer"></i> Imprimir
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Script para barra de búsqueda y AJAX -->
<script>
    // Filtro de pagos
    const filterInput = document.getElementById('filterInput');
    filterInput.addEventListener('keyup', function () {
        const filter = filterInput.value.toLowerCase();
        const cards = document.querySelectorAll('.row .col-md-4');
        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            card.style.display = text.includes(filter) ? '' : 'none';
        });
    });

    // Función para reimprimir
    function reimprimir(id) {
        fetch(`/Pagoes/ReciboPartial/${id}`)
            .then(response => response.text())
            .then(html => {
                document.getElementById('modalBody').innerHTML = html;
                var modal = new bootstrap.Modal(document.getElementById('reciboModal'));
                modal.show();
            })
            .catch(err => console.error(err));
    }

    // Función para imprimir el recibo
    function imprimirRecibo() {
        const contenido = document.getElementById('modalBody').innerHTML;
        const ventana = window.open('', '', 'width=800,height=600');
        ventana.document.write('<html><head><title>Imprimir Recibo</title>');
        ventana.document.write('<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />');
        ventana.document.write('</head><body>');
        ventana.document.write(contenido);
        ventana.document.write('</body></html>');
        ventana.document.close();
        ventana.print();
    }
</script>

<link rel="stylesheet" href="~/css/vehiculos.css" />
