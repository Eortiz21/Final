@model Primera.Models.Pago

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Recibo de Pago</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Recibo de Pago</h3>
            </div>
            <div class="card-body">
                <p><strong>Ticket:</strong> @Model.Ticket.NoPlaca</p>
                <p><strong>Fecha de Entrada:</strong> @Model.Ticket.Fecha_hora_entrada</p>
                <p><strong>Fecha de Pago:</strong> @Model.FechaPago</p>
                <p><strong>Monto Pagado:</strong> @Model.MontoPago.ToString("C")</p>
                <p><strong>Método de Pago:</strong> @Model.MetodoPago</p>
                <p><strong>Estado del Pago:</strong> @Model.EstadoPago</p>
                <p><strong>Espacio:</strong> @Model.Ticket.Id_Espacio</p>
                @* Si quieres mostrar nivel, asegúrate de que Ticket tenga una propiedad Nivel *@
                @* <p><strong>Nivel:</strong> @Model.Ticket.Nivel</p> *@
            </div>
            <div class="card-footer">
                <button class="btn btn-success" onclick="window.print()">Imprimir Recibo</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>

    <script>
        // Imprimir automáticamente al cargar la página
        window.onload = function() {
            window.print();
        }
    </script>
</body>
</html>
