@model Primera.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Eliminar Pago</h3>
        </div>
        <div class="card-body">
            <h5>¿Está seguro que desea eliminar este pago?</h5>

            <dl class="row">
                <dt class="col-sm-3">Ticket</dt>
                <dd class="col-sm-9">@Model.Ticket?.NoPlaca</dd>

                <dt class="col-sm-3">Monto del Pago</dt>
                <dd class="col-sm-9">@Model.MontoPago.ToString("C")</dd>

                <dt class="col-sm-3">Fecha de Pago</dt>
                <dd class="col-sm-9">@Model.FechaPago.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Método de Pago</dt>
                <dd class="col-sm-9">@Model.MetodoPago</dd>

                <dt class="col-sm-3">Estado del Pago</dt>
                <dd class="col-sm-9">@Model.EstadoPago</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id_Pago" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
