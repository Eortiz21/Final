@model IEnumerable<Primera.Models.Tarifa>

@{
    ViewData["Title"] = "Tarifas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Tarifas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva
        </a>
    </div>

    <input type="text" id="filterInput" placeholder="Filtrar por tipo, monto o descripción..." class="form-control mb-3" />

    <table id="tarifasTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tipo de Tarifa</th>
                <th>Monto</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TipoTarifa)</td>
                        <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id_Tarifa" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id_Tarifa" class="btn btn-sm btn-success me-1">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Tarifa" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const filterInput = document.getElementById("filterInput");
        const table = document.getElementById("tarifasTable");
        const rows = table.getElementsByTagName("tr");

        filterInput.addEventListener("keyup", function () {
            const filter = filterInput.value.toLowerCase();

            for (let i = 1; i < rows.length; i++) {
                const tipo = rows[i].cells[0].textContent.toLowerCase();
                const monto = rows[i].cells[1].textContent.toLowerCase();
                const descripcion = rows[i].cells[2].textContent.toLowerCase();

                if (tipo.includes(filter) || monto.includes(filter) || descripcion.includes(filter)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        });
    });
</script>

