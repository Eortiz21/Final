@model Primera.Models.Tarifa

@{
    ViewData["Title"] = "Detalles de Tarifa";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Detalles de Tarifa</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tipo de Tarifa</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoTarifa)</dd>

                <dt class="col-sm-3">Monto</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id_Tarifa" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>
