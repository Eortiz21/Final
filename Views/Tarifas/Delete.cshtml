@model Primera.Models.Tarifa

@{
    ViewData["Title"] = "Eliminar Tarifa";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Eliminar Tarifa</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i>
                ¿Está seguro que desea eliminar esta tarifa?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Tipo de Tarifa</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoTarifa)</dd>

                <dt class="col-sm-3">Monto</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id_Tarifa" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
