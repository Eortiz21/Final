@model IEnumerable<Primera.Models.EspacioEstacionamiento>

@{
    ViewData["Title"] = "Espacios de Estacionamiento";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary fw-bold">Espacios de Estacionamiento</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nuevo
        </a>
    </div>

    <!-- 💬 BARRA DE BÚSQUEDA + BOTÓN -->
    <!-- Barra de búsqueda con botón verde -->
    <div class="input-group mb-3">
        <input type="text" 
               id="filterInput" 
               placeholder="Filtrar por id, espacio, nivel, tipo o estado..." 
               class="form-control" />
        <button id="searchButton" class="btn btn-success" type="button">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
    <!-- 💬 FIN DE LA BARRA DE BÚSQUEDA -->

    <table id="espaciosTable" class="table table-striped table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Número de Espacio</th>
                <th>Nivel</th>
                <th>Tipo de Espacio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td data-label="ID">@Html.DisplayFor(modelItem => item.Id_Espacio)</td>
                        <td data-label="Número de Espacio">@Html.DisplayFor(modelItem => item.No_Espacio)</td>
                        <td data-label="Nivel">@Html.DisplayFor(modelItem => item.Nivel)</td>
                        <td data-label="Tipo de Espacio">@Html.DisplayFor(modelItem => item.TipoEspacio)</td>
                        <td data-label="Estado">@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td data-label="Acciones">
                            <a asp-action="Edit" asp-route-id="@item.Id_Espacio" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id_Espacio" class="btn btn-sm btn-success me-1">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Espacio" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<!-- Estilos y scripts -->
<link rel="stylesheet" href="~/css/vehiculos.css" />
<script src="~/js/vehiculos.js"></script>

<!-- 💚 Script de búsqueda funcional -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("filterInput");
        const button = document.getElementById("searchButton");
        const table = document.getElementById("espaciosTable");
        const rows = table.getElementsByTagName("tr");

        button.addEventListener("click", function () {
            const filter = input.value.toLowerCase().trim();

            // Si no se ingresó texto, mostrar todas las filas
            if (filter === "") {
                for (let i = 1; i < rows.length; i++) {
                    rows[i].style.display = "";
                }
                return;
            }

            // Recorremos las filas y mostramos solo las que coincidan
            for (let i = 1; i < rows.length; i++) {
                const row = rows[i];
                const text = row.innerText.toLowerCase();

                if (text.includes(filter)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            }
        });
    });
</script>
