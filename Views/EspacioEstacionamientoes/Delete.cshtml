@model Primera.Models.EspacioEstacionamiento

@{
    ViewData["Title"] = "Eliminar Espacio de Estacionamiento";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Eliminar Espacio de Estacionamiento</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i>
                ¿Está seguro que desea eliminar este espacio?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Número de Espacio</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.No_Espacio)</dd>

                <dt class="col-sm-3">Nivel</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nivel)</dd>

                <dt class="col-sm-3">Tipo de Espacio</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoEspacio)</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id_Espacio" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
