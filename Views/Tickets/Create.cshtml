@model Primera.Models.Ticket

@{
    ViewData["Title"] = "Crear Ticket";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0">Crear Ticket</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="NoPlaca" class="form-label fw-semibold"></label>
                    <select asp-for="NoPlaca" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.NoPlaca"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Id_Espacio" class="form-label fw-semibold"></label>
                    <select asp-for="Id_Espacio" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.Id_Espacio"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Fecha_hora_entrada" class="form-label fw-semibold"></label>
                    <input asp-for="Fecha_hora_entrada" class="form-control rounded-3 shadow-sm" type="datetime-local" />
                    <span asp-validation-for="Fecha_hora_entrada" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Fecha_hora_salida" class="form-label fw-semibold"></label>
                    <input asp-for="Fecha_hora_salida" class="form-control rounded-3 shadow-sm" type="datetime-local" />
                    <span asp-validation-for="Fecha_hora_salida" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Id_Tarifa" class="form-label fw-semibold"></label>
                    <select asp-for="Id_Tarifa" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.Id_Tarifa"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="PagoTotal" class="form-label fw-semibold"></label>
                    <input asp-for="PagoTotal" class="form-control rounded-3 shadow-sm" type="number" step="0.01" />
                    <span asp-validation-for="PagoTotal" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Volver a la lista</a>
                    <button type="submit" class="btn btn-success">Guardar Ticket</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
