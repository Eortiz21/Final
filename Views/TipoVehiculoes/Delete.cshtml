@model Primera.Models.TipoVehiculo

@{
    ViewData["Title"] = "Eliminar Tipo de Vehículo";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Eliminar Tipo de Vehículo</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i>
                ¿Está seguro que desea eliminar este tipo de vehículo?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">Marca</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3">Tamaño</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tamano)</dd>

                <dt class="col-sm-3">Ejes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ejes)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id_Tipo" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
</
