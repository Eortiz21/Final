@model Primera.Models.TipoVehiculo

@{
    ViewData["Title"] = "Detalles del Tipo de Vehículo";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Detalles del Tipo de Vehículo</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">Marca</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3">Tamaño</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tamano)</dd>

                <dt class="col-sm-3">Ejes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ejes)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id_Tipo" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>
