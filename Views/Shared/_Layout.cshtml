@{
    var userEmail = User.Identity.Name ?? "Usuario";
    var userName = userEmail.Contains("@") ? userEmail.Substring(0, userEmail.IndexOf("@")) : userEmail;
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Parqueo</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper" class="d-flex">

        <!-- Sidebar -->
        <nav id="sidebar-wrapper" class="border-end sidebar p-3">
            <h5 class="fw-bold">Panel</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                        <i class="bi bi-person-vcard"></i> Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EspacioEstacionamientoes" asp-action="Index">
                        <i class="bi bi-square"></i> Espacios de Estacionamiento
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="TipoVehiculoes" asp-action="Index">
                        <i class="bi bi-truck"></i> TipoVehiculo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">
                        <i class="bi bi-truck"></i> Vehículo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Tarifas" asp-action="Index">
                        <i class="bi bi-tags"></i> Tarifas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Tickets" asp-action="Index">
                        <i class="bi bi-ticket-perforated"></i> Ticket
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Pagoes" asp-action="Index">
                        <i class="bi bi-cash"></i> Pago
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido Principal -->
        <div id="page-content-wrapper" class="flex-grow-1">

            <!-- Navbar -->
            <header>
                <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm">
                    <div class="container-fluid">
                        <button id="sidebar-toggle-btn" class="btn me-2" title="Mostrar/Ocultar menú">
                            <i class="bi bi-list"></i>
                        </button>

                        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Parqueo</a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="mainNavbar">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                                </li>
                            </ul>

                            <div class="d-flex align-items-center ms-auto">
                                <!-- Botón Modo Oscuro -->
                                <button id="themeToggle" class="btn btn-outline-secondary me-1" title="Cambiar tema">
                                    <i class="bi bi-sun" id="themeIcon"></i>
                                </button>

                                <!-- Menú Usuario -->
                                <div class="dropdown">
                                    <a href="#" class="btn btn-outline-primary dropdown-toggle d-flex align-items-center" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle fs-4 me-1"></i>
                                        <span>@userName</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                        <li>
                                            <form method="post" asp-area="Identity" asp-page="/Acc<ount/Logout" asp-route-returnUrl="/" id="logoutForm">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                                                </button>
                                            </form>

                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>

            <!-- Contenido -->
            <div class="container mt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="footer mt-auto py-3 border-top text-muted">
                <div class="container d-flex justify-content-between align-items-center">
                    <div>
                        <img src="~/imagenes/UMG.png" alt="Logo Parqueo" style="height: 40px;">
                    </div>
                    <div>
                        &copy; 2025 - Parqueo - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script>
        // Confirmar logout
        document.getElementById('logoutForm').addEventListener('submit', function(e){
            if(!confirm("¿Está seguro de que desea cerrar sesión?")){
                e.preventDefault();
            }
        });

        // Modo oscuro con persistencia
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);
        themeIcon.className = savedTheme === 'dark' ? 'bi bi-moon' : 'bi bi-sun';

        themeToggle.addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-bs-theme', newTheme);
            themeIcon.className = newTheme === 'dark' ? 'bi bi-moon' : 'bi bi-sun';
            localStorage.setItem('theme', newTheme);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
